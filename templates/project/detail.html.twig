{% extends 'base.html.twig' %}

{% block title %}Détail du Projet{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h1 class="card-title">{{ project.titre }}</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-warning">Modifier</a>
            {% endif %}
        </div>
        <div class="card-body">
            <p class="card-text">{{ project.description }}</p>
            <p class="card-text"><strong>Date de début :</strong> {{ project.startDate|date('d/m/Y') }}</p>
            <p class="card-text"><strong>Date de fin :</strong> {{ project.endDate ? project.endDate|date('d/m/Y') : 'En cours' }}</p>
            {% if project.photo %}
                <div class="mb-3">
                    <img src="{{ asset('uploads/photos/' ~ project.photo) }}" alt="Photo du projet" class="img-fluid card-img-top">
                </div>
            {% endif %}
            {% if project.pdf %}
                <div class="mb-3">
                    <a href="{{ asset('uploads/pdfs/' ~ project.pdf) }}" class="img-fluid card-img-top" target="_blank">Télécharger le fichier PDF descriptif du projet</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}