{% extends 'base.html.twig' %}

{% block title %}Liste des Mémos{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Liste des Mémos</h1>
    <div class="d-flex justify-content-end mb-3">
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_memo_new') }}" class="btn btn-primary">Créer un nouveau mémo</a>
    {% endif %}
    </div>
    {% if memos is not empty %}
        <div class="row">
            {% for memo in memos %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ memo.titre }}</h5>
                            <p class="card-text">{{ memo.contenu|slice(0, 100) ~ '...' }}</p>
                            <a href="{{ path('app_memo_detail', {id: memo.id}) }}" class="btn btn-primary">Lire la suite</a>
                             {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_memo_edit', {id: memo.id}) }}" class="btn btn-secondary mt-2">Modifier</a>
                                <a href="{{ path('app_memo_delete', {id: memo.id}) }}" class="btn btn-danger mt-2" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce mémo ?');">Supprimer</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-warning" role="alert">
            Aucun mémo trouvé.
        </div>
    {% endif %}
</div>
{% endblock %}